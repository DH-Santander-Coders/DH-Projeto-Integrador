<!DOCTYPE html>
<html lang="pt-br">

<%- include('./partials/head-meta') %> 

<body>

<%- include('./partials/header') %>

<div class="container mb-4">
    
    <div class="container card col-lg-5 col-md-7 mt-4 px-4" id="form-criar">
        <form action="/post/criar" method="POST" enctype="multipart/form-data">
            <div>
                <h5 class="text-center mt-4 mb-3" id="texto-identificacao">Criar Post</h5>
            </div>

            <div class="form-group">
                <label class="form-label" for="post-titulo">Título do post</label>
                <input type="text" class="form-control" id="post-titulo" name="titulo">
            </div>
            <div class="form-group">
                <label class="form-label" for="post-descricao">Descrição</label>
                <textarea class="form-control" id="post-descricao" rows="6" name="descricao"></textarea>
            </div>
            <div class="form-group">
                <label class="form-label" for="post-midias-anexadas">
                    Mídias anexadas
                </label>

                <div class="midias">
                    <img class="img-thumbnail rounded" src=""
                        alt="" id="foto-label" width="100%" height="100%">
                </div>
            </div>

            <div class="row">
                <input id='selecao-foto' type='file' name="fotoPost">
                <label for='selecao-foto' id="btn-input-foto"></label>
                <label for='selecao-foto' id="texto-selecionar-foto">Selecionar foto</label>                        
            </div>
            
            <div class="d-flex mb-3 mt-4 mx-auto justify-content-around">
                <a href="/home">
                    <button type="button" class="btn-vegme px-5 py-2">Cancelar</button>
                </a>
                
                <button type="submit" class="btn-vegme px-5 py-2">Publicar</button>
                
            </div>
        </form>
    </div>
</div>

<%- include('./partials/scripts') %> 

</body>

</html>