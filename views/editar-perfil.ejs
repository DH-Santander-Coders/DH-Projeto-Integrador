<!DOCTYPE html>
<html lang="pt-br">

<%- include('./partials/head-meta') %>

<body>

    <%- include('./partials/header') %>

    <div class="container">
        <div class="container card col-lg-5 col-md-7 mt-4 px-4" id="form">
            <form action="/usuario/editar" method="POST" enctype="multipart/form-data">
                <div>
                    <h5 class="text-center mt-4 mb-4" id="texto-identificacao">Editar perfil</h5>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <label for='selecao-foto' id="foto-perfil">Foto</label>
                    <input id='selecao-foto' type='file' name="fotoPerfil">
                </div>
                <div class="form-group">
                    <label for="FormControlInput1">Nome Completo</label>
                    <input type="text" class="form-control" id="FormControlInput" placeholder="Nome atual do perfil"
                        name="nome" value="<%= usuario.nome %>">
                </div>
                <div class="form-group">
                    <label for="FormControlTextarea1">Biografia</label>
                    <textarea class="form-control"
                        placeholder="Para remover a biografia tecle espaÃ§o ate sumir esse texto!" name="biografia"
                        rows="4"><%= usuario.biografia %> </textarea>
                </div>
                <div class="d-flex mb-3 mx-auto">
                    <a href="/home">
                        <button class="btn-salvar px-5 py-2">Cancelar</button>
                    </a>

                    <button type="submit" class="btn-salvar px-5 py-2">Salvar</button>

                </div>
            </form>
        </div>
    </div>

    <%- include('./partials/scripts') %>

</body>

</html>