<!DOCTYPE html>
<html lang="pt-br">

<%- include('./partials/head-meta') %>

<body>

    <%- include('./partials/header') %>
    <main>

        <div class="container mt-md-5 mb-3">
            <div class="row">

                <!-- Seção do Perfil -->
                <section class="col-3 d-none d-md-block p-0" id="perfil">

                    <div class="card" id="card-perfil">
                        <img src="<%= usuario.foto_perfil %>" class="card-img-top" alt="...">
                        <div class="card-body">

                            <h5 class="card-title mb-0"> <%= usuario.nome  %> </h5>
                            <h6 class="card-text text-muted"> @<%= usuario.nickname  %> </h6>
                            <p class="card-text"> <%= usuario.biografia  %> </p>
                        </div>
                    </div>

                </section>

                <!-- Seção do Post -->
                <section class="col-md-6" id="post">

                    <!-- Botões Post -->
                    <div class="d-none d-md-flex justify-content-between">

                        <a href="/post/criar">
                            <button type="button" class="btn btn-vegme" id="btn-criar-post">Criar</button>
                        </a>

                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                            <label class="btn btn-vegme active">
                                <input type="radio" name="publico-favoritos" id="post-publico" checked value="publico"> Público
                            </label>
                            <label class="btn btn-vegme">
                                <input type="radio" name="publico-favoritos" id="post-favorito" value="favoritos"> Favoritos
                            </label>
                        </div>

                    </div>

                    <!-- Feed -->
                    <div id="feed" class="row d-md-block mt-3">

                        <div class="col p-0">

                            <!-- Card do Post -->
                            <% posts.forEach( post => {  %>
                            <div class="card" id="<%=post.id%>">

                                <div class="d-flex align-items-center justify-content-start m-1">
                                    <img src="/<%= post.usuario.foto_perfil %>" alt="Logo"
                                            id="foto-perfil">
                                    <div>
                                        <p class="pl-2 m-0"><%= post.usuario.nome %></p>

                                        <p id="data-post" class="text-muted pl-2 m-0">
                                            <%= moment(post.createdAt).format('DD/MM/YYYY')%></p>
                                    </div>
                                </div>

                                <% if(post.imagens[0].caminho != "null"){ %>
                                <img src="<%=post.imagens[0].caminho%>" class="card-img-top" alt="...">
                                <% } %>
                                <div class="card-body">

                                    <div class="d-flex justify-content-between">
                                        <h5 class="card-title"><%=post.titulo%></h5>
                                    </div>

                                </div>

                                <!-- Botões Post + Curtir + Comentar -->
                                <div class="row">

                                    <div class="col group-btn-post">
                                        <a href="/post/post-completo?post=<%=post.id%>">
                                            <button type="button" class="btn btn-ccp">Post</button>
                                        </a>
                                    </div>
                                    <div class="col group-btn-post">
                                        <a href="/curtir/post/<%=post.id%>">
                                            <button type="button" class="btn btn-ccp">
                                                Curtir

                                                <% let statusCurtida = '' %>
                                                <% post.curtidas.forEach(curtida => { %>
                                                    <% if (curtida.usuarioId == usuario.id) { %>
                                                        <% statusCurtida = 'curtida' %> 
                                                    <% } %>
                                                <% }) %>
                                                <span class="badge badge-pill <%= statusCurtida %>" id="contador-curtidas"><%= post.curtidas.length %></span>

                                            </button>
                                        </a>    
                                    </div>
                                    <div class="col group-btn-post">
                                        <button type="button" class="btn btn-ccp" data-toggle="collapse" data-target="#form-comentario-<%= post.id %>">Comentar</button>
                                    </div>
                                </div>

                                <div class="collapse" id="form-comentario-<%= post.id %>">
                                    <div class="container my-3">
                                        <form action="/comentario/post?post=<%= post.id %>" method="POST" class="d-flex justify-content-between align-items-center">
                                            <div class="form-group w-100 mr-3 m-0">
                                                <input type="text" class="form-control" id="input-comentario-<%= post.id %>" placeholder="Digite seu comentário..." name="descricao">
                                            </div>
                                            <button type="submit">
                                                <i id="btn-enviar" class="fas fa-paper-plane"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>

                            </div>
                            <% }) %>


                        </div>

                    </div>

                </section>

                <!-- Seção Amigos -->
                <section class="col-md-3 d-none d-md-block " id="amigos">

                    <h3 class="text-center mt-2">Favoritos</h3>

                    <div class="list-group list-group-flush">
                        <% favoritos.forEach( favorito => {  %> 
                        <div class="list-group-item d-flex align-items-center">
                            <img src="<%= favorito.foto_perfil %> "
                                class="img-amigo img-fluid" alt="...">
                            <%= favorito.nome %> 
                        </div>                       
                    <% }) %> 
                    </div>
                </section>

            </div>
        </div>

    </main>

    <!-- Footer para mobile -->
    <footer>
        <div class="container d-md-none p-2">
            <div class="row">
                <div class="col btn-feed">
                    <a href="#nav-bar">
                        <button type="button" class="btn btn-vegme" id="btn-footer-home">Home</button>
                    </a>
                </div>
                <div class="col btn-feed">
                    <button type="button" class="btn btn-vegme" id="btn-footer-amigos">Favoritos</button>
                </div>
                <div class="col btn-feed">
                    <a href="/post/criar">
                        <button type="button" class="btn btn-vegme">Criar</button>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <%- include('./partials/scripts') %>

</body>

</html>